# Maintainer: AlphaJack <alphajack at tuta dot io>

pkgname=harlequin-mysql
pkgver=1.2.0
pkgrel=1
pkgdesc="The SQL IDE for Your Terminal"
url="https://github.com/tconbeer/harlequin-mysql"
license=("MIT")
arch=("any")
depends=("harlequin" "python-mysql-connector")
makedepends=("python-build"
    "python-installer"
    "python-poetry"
    "python-wheel")
options=("!strip")
source=("$pkgname-$pkgver.tar.gz::$url/archive/v$pkgver.tar.gz")
b2sums=('c67e9ded1082419a848070bdb25ed56bb64f069e6090dd3e9de3e4867f2f3e7b6072bfe9737351d3132c8c4984dc740ba1a44a4a32734ff3b7606f4a4d0a4fba')

build() {
    cd "$pkgname-$pkgver"
    python -m build --wheel --no-isolation
}

package() {
    cd "$pkgname-$pkgver"
    python -m installer --destdir="$pkgdir" dist/*.whl
}
